<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
   <style>
        .modal1{
          position: absolute;
          border-radius: 10px;
          top: 0;
          left: 0;
          margin-left: 400px;
          margin-top: 60px;
          padding: 20px;
          width: 40%;
          background-color: #DAF5E8;
          z-index: 100;
          visibility:hidden;
        }
        .input-c{
            border-radius: 6px;
        }
        body{
            font-family: 'Saira', sans-serif;
            overflow-x: hidden;
        }
    </style>    
    <title>Updates</title>
</head>
<body>
    <%-include('../partials/navbar.ejs')%>

    <p class="h1 text-center">Updates</p>
    <p class="text-center"><button class="btn btn-success"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">ADD UPDATE</button></p>
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
    
            <!-- Modal content-->
            <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p class="h1 text-center">ADD UPDATE</p>
                <form action="/admin/updates" method="post" enctype="multipart/form-data">
            <div class="row mt-3">
                <div class="col-4"><p class="h5">Update Name</p></div>
                <div class="col-1"><p class="h5">:</p></div>
                <div class="col-7"><input type="text" name="text" style="width: 100%;"></div>
            </div>
            <div class="row mt-3">
                <div class="col-4"><p class="h5">Update Link</p></div>
                <div class="col-1"><p class="h5">:</p></div>
                <div class="col-7"><input type="text" name="link" style="width: 100%;"></div>
            </div>
         
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-success">
                </form>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
            </div>
    
        </div>
    </div>

    <div class="container">
        <%updates.forEach((x)=>{%>
        <div class="row border mt-3 p-3 mb-5 bg-white rounded">
            <div class="col-5">
                <p class="h4">Update</p>
                <p><%=x.text%></p>
            </div>
            <div class="col-5">
                <p class="h4">link</p>
                <p><%=x.link%></p>
            </div>
            <div class="col-1 mt-4">
                <a class="btn btn-warning"  href="/admin/updates/edit/<%=x.id%>" >Update</a>
            </div>
            <div class="col-1 mt-4">
                <a href="/admin/updates/delete/<%=x.id%>"><button class="btn btn-danger">Delete</button></a>
            </div>
        </div>
    <%})%>
    </div>
    <div class="row" style="height: 10vh;"></div>
    
    <footer class="fixed-bottom">
        <%-include('../partials/footer.ejs')%>
        </footer>
           
</body>
</html>