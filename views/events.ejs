<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b4c2bebdfd.js" crossorigin="anonymous"></script>
   <style>
         body{
            font-family: 'Saira', sans-serif;
            overflow-x: hidden;
        }
    </style>    
    <title>Events</title>
</head>
<body>
  <%-include('../partials/navbar.ejs')%>

    <div class="container">
      <div class="row">
        <div class="col-7">
          <p class="h1 text-right">Events</p>
        </div>
        <div class="col-5">
          <p class="text-right mt-2 mr-4"><a class="btn btn-success"  href="/admin/events/upload" >ADD Event</a></p>
        </div>
      </div>
      <div class="row">
        <%data.forEach((x)=>{%>
        <div class="col-4 mt-3">
          <div class="card" style="width: 20rem;">
            <img class="card-img-top ml-auto mr-auto mt-2" src="<%=x.image.url%>" alt="Card image" style="width:90% ;height: 40vh;" >
            <div class="card-body">
              <h4 class="card-title"><%=x.head%></h4>
              <p class="card-text"><%=x.text%></p>
              <p class="card-text"><%=x.deptfull%></p>
              <div class="row">
                <div class="col-4">
                  <div class="row">
                    <div class="col-12">
                      <p class="">STATUS</p>
                    </div>
                    <div class="col-12 mt-1">
                      <a href="/admin/events/status/<%=x.id%>">
                        <%if(x.status){%>
                        <button class="btn badge badge-success px-3 rounded-pill font-weight-normal">on</button>
                        <%}else{%>
                        <button class="btn badge badge-danger px-3 rounded-pill font-weight-normal">off</button>
                        <%}%>
                      </a>
                    </div>
                  </div>
                </div>
                <div class="col-4">
                  <div class="row">
                    <div class="col-12">
                      <p >UPDATE</p>
                    </div>
                    <div class="col-12">
                      <a class="btn ml-2" href="/admin/events/update/<%=x.id%>" ><i class="fa-solid fa-pen-to-square"></i></a>
                    </div>
                  </div>
                </div>
                <div class="col-4">
                  <div class="row">
                    <div class="col-12">
                      <p >DELETE</p>
                    </div>
                    <div class="col-12">
                      <button class="btn ml-2" ><a class="text-dark" href="/admin/events/delete/<%=x.id%>"><i class="fa-solid fa-trash"></i></a></button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%})%>
      </div>
    </div>
    <div class="row" style="height: 10vh;"></div>

    <footer class="fixed-bottom">
      <%-include('../partials/footer.ejs')%>
      </footer>
</body>
</html>