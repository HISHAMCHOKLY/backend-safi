<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/updatepagecss.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    <style>
      body{
           font-family: 'Saira', sans-serif;
           overflow-x: hidden;
       }
   </style>
</head>
<body>
  <%-include('../partials/navbar.ejs')%>

    
    <h1 style="font-size: 5vw;" class="text text-center mb-2">Add happening</h1>
    <div class="container shadow">
      <form action="/admin/happening/upload" method="post" enctype="multipart/form-data">
          <div class="row">
            <div class="col-3">
              <label for="fname" class="ml-4">Happening Name</label>
            </div>
            <div class="col-9">
              <input type="text" id="fname" name="head"  required>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label class="ml-4">Happening Description</label>
            </div>
            <div class="col-9">
              <input type="text" id="fname" name="text"  required>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label class="ml-4">Happening Link</label>
            </div>
            <div class="col-9">
              <input type="text" id="fname" name="link"  required>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label class="ml-4">Status</label>
            </div>
            <div class="col-9">
                <input id="chkToggle1" name="cstatus" type="checkbox" data-toggle="toggle" >
              </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label class="ml-4">Image Upload</label>
            </div>
            <div class="col-9 dropzone mt-2">
              <div class="row">
                <div class="col-6 mt-auto mb-auto ">
                  <input type="file" id="fileInput" name="photo" required >
                </div>
              </div>
              <p class="text-danger mt-2" id="imgwar"> </p>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <label ></label>
            </div>
            <div class="col-9">
              <input type="submit" value="update" class="mt-3 mr-3" >
            </div>
          </div>
        </form>
      </div>
      <div class="row" style="height: 10vh;"></div>

      <footer class="fixed-bottom">
        <%-include('../partials/footer.ejs')%>
        </footer>
</body>
<script>
  let fileInput=document.getElementById('fileInput')
  fileInput.addEventListener("change", function () {

  const reader = new FileReader();

  reader.readAsDataURL(fileInput.files[0]);
  reader.onload = (e) => {
  const image = new Image();
  image.src = e.target.result;
  image.onload = (e) => {
    const height = e.target.height;
    
    const width = e.target.width;
    
    if (height!=width) {
      document.getElementById('fileInput').value=''
      document.getElementById('imgwar').innerText='Image should be less than 150Kb and in square resolution'
    }
    else{
      if(fileInput.files.item(0).size>=153600){
      document.getElementById('fileInput').value=''
      document.getElementById('imgwar').innerText='Please upload images less than 150KB'
      
    }else{
      document.getElementById('imgwar').innerText=''
    }
  }
};
};
});

</script>
</html>