    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    <style>
      body{
         font-family: 'Saira', sans-serif;
         overflow-x: hidden;
     }
     </style>
</head>
<body class="clr1">
    <%-include('../partials/navbar.ejs')%>
    
    <h1 style="font-size: 5vw;" class="text text-center mb-4">Edit Updates</h1>
    <div class="container shadow">
        <form action="/admin/updates/edit/<%=data.id%>" method="post" enctype="multipart/form-data">
          <input type="hidden" name="eid"value="">
          <div class="row">
            <div class="col-25">
              <label  class="ml-4 " >Updates</label>
            </div>
            <div class="col-75">
              <input type="text" class="mr-2" name="text" value="<%=data.text%>"  required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label  class="ml-4 ">update Link</label>
            </div>
            <div class="col-75">
              <input type="text"  name="link" value="<%=data.link%>" required>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label ></label>
            </div>
            <div class="col-75">
              <input type="submit" value="Update" class="mt-3 mr-5 bg-success" >
            </div>
          </div>
        </form>
      </div>
      <div class="row" style="height: 10vh;"></div>

      <footer class="fixed-bottom">
        <%-include('../partials/footer.ejs')%>
        </footer>
</body>
