<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b4c2bebdfd.js" crossorigin="anonymous"></script>
   <style>
         body{
            font-family: 'Saira', sans-serif;
            overflow-x: hidden;
        }
        
    </style>    
    <title>Hod Events</title>
</head>
<body>
  <%-include('../partials/hod_navbar.ejs')%>
    <div class="container">
      <div class="row">
        <div class="col-8">
          <p class="h1 text-right"><%=deptfull%> Events</p>
        </div>
        <div class="col-2 offset-2">
          <p class=" mt-2 mr-4"><a class="btn btn-success" href="/hod/events/upload" >ADD Event</a></p>
        </div>
      </div>
      <div class="row">
        <%data.forEach((x)=>{%>
        <div class="col-4 mt-3">
          <div class="card" style="width: 20rem;">
            <img class="card-img-top ml-auto mr-auto mt-2" src="<%=x.image.url%>" alt="Card image" style="width:90% ;height: 40vh;" >
            <div class="card-body">
              <h4 class="card-title"><%=x.head%></h4>
              <p class="card-text"><%=x.text%></p>
              <div class="row">
                <div class="col-4">
                  <div class="row">
                    <div class="col-12">
                      <p class="p-c">APPROVAL</p>
                    </div>
                    <div class="col-12 mt-1">
                      <p class="p-c text-warning">PENDING...</p>
                    </div>
                  </div>
                </div>
                <div class="col-4">
                  <div class="row">
                    <div class="col-12">
                      <p class="p-c">UPDATE</p>
                    </div>
                    <div class="col-12">
                      <a class="btn ml-2" href="/hod/events/update/<%=x.id%>"><i class="fa-solid fa-pen-to-square"></i></a>
                    </div>
                  </div>
                </div>
                <div class="col-4">
                  <div class="row">
                    <div class="col-12">
                      <p class="p-c">DELETE</p>
                    </div>
                    <div class="col-12">
                      <button class="btn ml-2" ><a class="text-dark" href="/hod/events/delete/<%=x.id%>"><i class="fa-solid fa-trash"></i></a></button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%})%>
      </div>
    </div>
    <div class="row" style="height: 10vh;"></div>

    <footer class="fixed-bottom">
      <%-include('../partials/footer.ejs')%>
      </footer>
</body>
<script>
    function modal(a) {
        window.scrollTo(0, 0);
        let domain="/hod/update/getData"
        let modal=document.getElementById('modal')
   
        modal.style.visibility='visible'
        fetch(domain,{  
        method:"POST",
        body:JSON.stringify({id:a.id}),
        headers:{
          "Content-type":"application/json; charset=UTF-8"
        }
      })
      .then((resp)=>resp.json())
      .then((data)=>{
        document.getElementById('modal').innerHTML=` <form action="/hod/update" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="${data.data.id}">
        <p class="h3 text-center">Update</p>
        <div class="row mt-3">
        <div class="col-3 offset-2">Program Name</div>
        <div class="col-1">:</div>
        <div class="col"><input type="text" value="${data.data.eName}" name="ename"></div>
      </div>
      <div class="row mt-3">
        <div class="col-3 offset-2">Program Discription</div>
        <div class="col-1">:</div>
        <div class="col"><input type="text" name="edisc" value="${data.data.eDisc}"></div>
      </div>
      <div class="row mt-3">
        <div class="col-3 offset-2"><label for="img">Select image:</label></div>
        <div class="col-1">:</div>
        <div class="col"><input type="file" id="photo" name="photo" accept="image/*"></div>
      </div>
      <p class="text-right mt-3">
      <button type="submit" class="btn btn-success" >submit</button>
      <button type="button" onclick="closemodal()" class="btn btn-danger">close</button>
      </p>
    </form>`

      })
      .catch((e)=>{
        console.error(e)
      })
                
    }
    function closemodal() {
        let modal=document.getElementById('modal')
        modal.style.visibility='hidden'
        
    }
</script>
</html>